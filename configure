#!/bin/bash

cat <<'EOL' > Makefile
CC = clang
CFLAGS = -Wall -O2
TARGET = termux-monitor-iface
SRC = $(TARGET).c

all: $(TARGET)

$(TARGET): $(SRC)
	$(CC) $(CFLAGS) -o $(TARGET) $(SRC)

clean:
	rm -f $(TARGET)
	rm -rf release/

release: all
	mkdir -p release/
	cp $(TARGET) release/
	strip -s release/$(TARGET)

install:
	install -m 755 $(TARGET) $(PREFIX)/bin/

uninstall:
	rm -f $(PREFIX)/bin/$(TARGET)
EOL

echo "Configuration complete. Run \"make\" to build, then \"make install\" to install."
